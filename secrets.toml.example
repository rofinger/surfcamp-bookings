# ============================================
# BEISPIEL secrets.toml - NICHT DIREKT VERWENDEN!
# Ersetze alle Platzhalter mit deinen echten Werten
# ============================================

# ============================================
# GOOGLE SHEETS KONFIGURATION
# ============================================

[connections.gsheets]
# Deine Google Sheets URL oder ID
spreadsheet = "https://docs.google.com/spreadsheets/d/1ABC...XYZ/edit"
# Oder nur die ID: "1ABC...XYZ"

# Service Account Credentials (aus der heruntergeladenen JSON-Datei)
type = "service_account"
project_id = "dein-projekt-123456"
private_key_id = "abc123def456..."
private_key = "-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBg...(sehr lang)...==\n-----END PRIVATE KEY-----\n"
client_email = "surf-camp-sheets@dein-projekt-123456.iam.gserviceaccount.com"
client_id = "123456789012345678901"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/surf-camp-sheets%40dein-projekt-123456.iam.gserviceaccount.com"

# ============================================
# E-MAIL KONFIGURATION (Gmail)
# ============================================

[email]
# Deine Gmail-Adresse
address = "deine-email@gmail.com"
# Gmail App-Passwort (16 Zeichen, KEINE Leerzeichen)
# Format: xxxxyyyyzzzzwwww (ohne Leerzeichen!)
password = "abcdabcdabcdabcd"

# ============================================
# AUTHENTIFIZIERUNG
# ============================================

[auth]
# Benutzername für Login
username = "admin"
# Dein Name
name = "Max Mustermann"
# Gehashtes Passwort (mit bcrypt generiert)
# Beispiel generiert mit: python -c "import bcrypt; print(bcrypt.hashpw(b'MeinPasswort123', bcrypt.gensalt()).decode('utf-8'))"
hashed_password = "$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5OfmVKqQd4aGy"
# Cookie-Key (zufälliger String, generiert mit: python -c "import secrets; print(secrets.token_urlsafe(32))")
cookie_key = "AbCdEfGhIjKlMnOpQrStUvWxYz0123456789"

# ============================================
# WICHTIGE HINWEISE
# ============================================

# 1. Ersetze ALLE Platzhalter mit deinen echten Werten
# 2. Die private_key muss die komplette Zeichenkette aus der JSON enthalten (mit \n)
# 3. Das Gmail-Passwort muss ein APP-PASSWORT sein (nicht dein normales Passwort)
# 4. Das hashed_password wird MIT bcrypt generiert
# 5. Zum Login verwendest du das ORIGINAL-Passwort (nicht das gehashte)
# 6. NIEMALS diese Datei ins Git-Repository committen!
